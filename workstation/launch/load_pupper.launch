<?xml version = "1.0"?>

<launch>
	<param name = "use_sim_time" value = "true"/>

	<!-- Start Gazebo instance -->
	<arg name = "debug" default = "false"/>
	<arg name = "gui"	default = "true"/>
	<arg name = "pause" default = "false"/>
	<arg name = "world" default = "$(find workstation)/pupper_description/pupper_world.world" />

	<include file = "$(find gazebo_ros)/launch/empty_world.launch">
		<arg name = "world_name"	value = "$(arg world)"/>
		<arg name = "debug" 		value = "$(arg debug)"/>
		<arg name = "gui"			value = "$(arg gui)"/>
		<arg name = "paused"		value = "$(arg pause)"/>
		<arg name = "use_sim_time"	value = "true"/>
		<arg name = "verbose" 		value = "true"/>
	</include>

	<!-- Spawn Pupper -->
	<param name = "robot_description"  command = "$(find xacro)/xacro '$(find workstation)/pupper_description/pupper.urdf.xacro'" />
	<node  name = "spawn_test_robot"  pkg = "gazebo_ros" type = "spawn_model" output = "screen"
		   args = "-urdf -param robot_description -model pupper
		  		  -x 0.0  -y 0.0 -z 0.2 -R 0 -P 0 -Y 0"/> 

</launch>